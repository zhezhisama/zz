<include file="Public:header" />
<div class="main">
    <div class="box_tit">
        <h2>修改会员组</h2>
    </div>
    <div class="form_list">
            <form method='post' id="form1" name="form1" action="{:U('Membergroup/update')}"  enctype="multipart/form-data">
            <div class="form_list_top">
            <dl>
                <dt> 会员组名：</dt>
                <dd>
                    <input type="text" class="ipt4" name="name" value="{$vo.name}">
                </dd>
            </dl>
            <dl>
                <dt> 用户权限：</dt>
                <dd>
                <lable><input type='checkbox' name="addwx" <eq name="vo.addwx" value="1">checked=true</eq> value="1">&nbsp;提交微信公号</lable>&nbsp;&nbsp;<lable><input type='checkbox' name="addwxverify" <eq name="vo.addwxverify" value="1">checked=true</eq> value="1">&nbsp;提交微信公号不需审核</lable>
                </dd>
            </dl>
            <dl>
                <dt> 组状态：</dt>
                <dd>
                    <select name="status">
                        <option <eq name="vo.status" value="1" >selected</eq> value="1">启用</option>
                        <option <eq name="vo.status" value="0" >selected</eq> value="0">禁用</option>
                    </select>
                </dd>
            </dl>
            <dl>
                <dt>描 述：</dt>
                <dd>
                    <textarea name="remark" style="width:400px; height:60px;">{$vo.remark}</textarea>
                </dd>
            </dl>
            </div>
            <div class="form_b">
                <input type="hidden" name="id" value="{$vo.id}" >
                <input type="submit" class="submit btn7" id="submit" value="提 交">
            </div>
           </form>
    </div>
</div>

<include file="Public:footer" />