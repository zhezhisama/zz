<include file="Public:header" />
<div class="main">
    <div class="box_tit">
        <h2>内链列表</h2>
    </div>
    <div class="operate">
        <div class="fLeft"><input type="button" onclick="add()" class="submit btn5" value="添加链接"></div>
        <div class="fLeft"><input type="button" onclick="foreverdel()" class="submit btn5" value="删除选中"></div>
        <div class="fLeft">
            <form method="post" action="{:U('Chain/index')}">
                <input type="text" name="name" title="标题" class="iptt6">
                <input type="submit" class="submit btn5" value="查  询">
            </form>
        </div>
    </div>
    <div class="list">
        <table width="100%" border="0" cellspacing="0" cellpadding="0">
            <tbody>
            <tr class="nbg">
                <th><input type="checkbox" id="check"></th>
                <th>编号</th>
                <th>关键词</th>
                <th>链接地址</th>
                <th>窗口</th>
                <th>频率</th>
                <th>状态</th>
                <th>操作</th>
            </tr>
            <volist name="list" id="vo">
            <tr>
                <td><input type="checkbox" name="key" value="{$vo.id}"></td>
                <td>{$vo.id}</td>
                <td>{$vo.keyword}</td>
                <td>{$vo.url}</td>
                <td><eq name="vo.target" value="_blank">新窗口<else />原窗口</eq></td>
                <td>{$vo.number}</td>
                <td><eq name="vo.status" value="1">显示<else />不显示</eq></td>
                <td><a href="{:U('Chain/edit',array('id'=>$vo['id']))}">修改</a>&nbsp;&nbsp;&nbsp;&nbsp;<a href="{:U('Chain/foreverdel',array('id'=>$vo['id']))}" onclick="foreverdel({$vo['id']}); return false;">删除</a></td>
            </tr>
            </volist>
            </tbody>
        </table>
        <div class="th" style="clear: both;">{$page}</div>
    </div>
</div>
<include file="Public:footer" />