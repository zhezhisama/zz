<include file="Public:header" />
<div class="main">
    <div class="box_tit">
        <h2>会员列表</h2>
    </div>
    <div class="operate">
        <div class="fLeft"><input type="button" onclick="add()" class="submit btn5" value="添加会员"></div>
        <div class="fLeft"><input type="button" onclick="foreverdel()" class="submit btn5" value="删除选中"></div>
        <div class="fLeft">
            <form method="post" action="{:U('Member/index')}">
                <input type="text" name="name" title="会员名称" class="iptt6">
            <input type="submit" class="submit btn5" value="查  询">
            </form>
        </div>
    </div>
    <div class="list">
        <table width="100%" border="0" cellspacing="0" cellpadding="0">
            <tbody>
            <tr class="nbg">
                <th><input type="checkbox" id="check"></th>
                <th>编号</th>
                <th>用户名</th>
                <th>昵称</th>
                <th>会员组</th>
                <th>最后登录ip</th>
                <th>最后登录时间</th>
                <th>金钱总数</th>
                <th>积分点数</th>
                <th>操作</th>
            </tr>
            <volist name="list" id="vo">
            <tr>
                <td><input type="checkbox" name="key" value="{$vo.id}"></td>
                <td>{$vo.id}</td>
                <td>{$vo.account}</td>
                <td>{$vo.nickname}</td>
                <td>{$vo.role_id|getMembergroup}</td>
                <td>{$vo.last_login_ip}</td>
                <td>{$vo.last_login_time|toDate='Y-m-d H:i:s'}</td>
                <td>{$vo.amount}</td>
                <td>{$vo.intergral}</td>
                <td><a href="{:U('Member/edit',array('id'=>$vo['id']))}">修改</a>&nbsp;&nbsp;&nbsp;&nbsp;<a href="{:U('Member/foreverdelete',array('id'=>$vo['id']))}" onclick="foreverdel({$vo['id']}); return false;">删除</a></td>
            </tr>
            </volist>
            </tbody>
        </table>
        <div class="th" style="clear: both;">{$page}</div>
    </div>
</div>
<include file="Public:footer" />