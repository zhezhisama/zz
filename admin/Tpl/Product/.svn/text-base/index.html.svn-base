<include file="Public:header" />
<div class="main">
    <div class="box_tit">
        <h2>产品列表</h2>
    </div>
    <div class="operate">
        <div class="fLeft"><input type="button" onclick="add({$catid})" class="submit btn5" value="添加产品"></div>
        <div class="fLeft"><input type="button" onclick="foreverdel()" class="submit btn5" value="删除选中"></div>
        <div class="fLeft">
            <form method="post" action="{:U('Product/index')}">
                <input type="text" name="name" title="产品名称" class="iptt6"><input type="hidden" name="catid" value="{$catid}">
            <input type="submit" class="submit btn5" value="查询">
            </form>
        </div>
    </div>
    <div class="list">
        <table width="100%" border="0" cellspacing="0" cellpadding="0">
            <tbody>
            <tr class="nbg">
                <th><input type="checkbox" id="check"></th>
                <th>编号</th>
                <th>产品名称</th>
                <th>产品价格</th>
                <th>上架时间</th>
                <th>操作</th>
            </tr>
            <volist name="list" id="vo">
            <tr>
                <td><input type="checkbox" name="key" value="{$vo.id}"></td>
                <td>{$vo.id}</td>
                <td>{$vo.title}</td>
                <td>{$vo.price}</td>
                <td>{$vo.create_time|toDate='Y-m-d'}</td>
                <td><a href="{:U('Product/edit',array('id'=>$vo['id']))}">修改</a>&nbsp;&nbsp;&nbsp;&nbsp;<a href="{:U('Product/foreverdelete',array('id'=>$vo['id']))}" onclick="foreverdel({$vo['id']}); return false;">删除</a></td>
            </tr>
            </volist>
            </tbody>
        </table>
        <div class="th" style="clear: both;">{$page}</div>
    </div>
</div>
<include file="Public:footer" />