<div class="login-bg clear">
  <div class="wrap w1000" style="position:relative;">
    <div id="reg">
            <ul class="processbar">
              <li class="step11"><span class="selspan">注册</span></li>
                <li class="step02"><span>登录</span></li>
                <li class="step03"><span>发布</span></li>
                <li class="step04"><span><a href="http://ys.qunduoduo.com/archives-1318.html" title="抢位规则">抢位</a></span></li>
                <li class="step05"><span>审核</span></li>
            </ul>
        </div>
      <div class="logo-area fLeft"></div>
        <div class="main-content fLeft">
          <div class="left fLeft">
              <p>注册新用户</p>
                <form method='post' id="form1" action="{:U('Member/checkRegister')}" >
                  <div class="d1">
                    <span>注册邮箱:</span>
                    <input id="email" name="email" class="i3" type="text">
                    <span id="accounterror" class="red">*</span>
                  </div>
                  <div class="d1">
                    <span>用户名:</span>
                    <input id="account" name="account" class="i1" type="text">
                  </div>
                  <div class="d1">
                    <span>密 码:</span>
                    <input name="password" id="password" class="i2" type="password">
                  </div>
                  <div class="d1">
                    <span>确认密码:</span>
                    <input name="repassword" id="repassword" class="i2" type="password">
                  </div>
                  <div class="d1">
                    <span>验证码:</span>
                    <input type="text" style="width: 95px;" id="verify" name="verify" class="i4"> 
                    <img id="verifyImg" src="{:U('Member/verify')}" onClick="fleshVerify()" border="0" alt="点击刷新验证码" style="cursor:pointer" align="absmiddle">
                  </div>
                  <div class="d1"><span>&nbsp;</span><input name="action" value="save" type="hidden"><input class="b1" value="注 册" type="submit"></div>
                </form>
            </div>
            <div class="right fRight">
              <p>已有帐号？ <a href="{:U('Member/login')}">直接登录</a></p>
                <div class="del"><span>其他帐号登录</span></div>
                <p class="p1"><a href=""><span class="b1"><i class="qq"></i>QQ登录</span></a><span class="b2"><i class="weibo"></i>微博登录</span></p>
            </div>
        </div>
    </div>
</div><!-- login-bg end -->

